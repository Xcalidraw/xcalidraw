{
  "overrides": [
    {
      "files": ["src/**/*.{ts,tsx}"],
      "rules": {
        "@typescript-eslint/no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["../../xcalidraw", "../../../packages/xcalidraw", "@xcalidraw/xcalidraw", "@excalidraw/excalidraw"],
                "message": "Do not import from '@xcalidraw/xcalidraw' or '@excalidraw/excalidraw' package anything but types, as this package must be independent.",
                "allowTypeImports": true
              }
            ]
          }
        ]
      }
    }
  ]
}
